{
  "mcpServers": {
    "wordpress-mcp": {
      "command": "uv",
      "args": [
        "--directory",
        "../MCPs/WordpressMCP",
        "run",
        "WordpressWPscanMCP.py"
      ]
    },
    "i-shell-mcp": {
      "command": "uv",
      "args": [
        "--directory",
        "../MCPs/IShellMCP",
        "run",
        "IShellMCP.py"
      ]
    },
    "metasploit-mcp": {
      "command": "uv",
      "args": [
        "--directory",
        "../MCPs/MetasploitMCP",
        "run",
        "MetasploitMCP.py",
        "--transport",
        "stdio"
      ],
      "env": {
        "MSF_PASSWORD": "pass123",
        "MSF_SERVER": "127.0.0.1",
        "MSF_PORT": "55553",
        "MSF_SSL": "false",
        "PAYLOAD_SAVE_DIR": "../MCPs/MetasploitMCP/payloads"
      }
    },
    "semgrep": {
      "command": "semgrep",
      "args": ["mcp"],
      "env": {
        "SEMGREP_ALLOW_LOCAL_SCAN": "true"
      }
    }
  }
}